<h1>Gruppen</h1>

<table class="ui celled striped table">
  <thead><tr>
    <th>Name</th>
    <th>Leiter</th>
    <th>Mitglieder</th>
    <th></th>
  </tr></thead>

<% @groups.each do |group| %>
  <tr>
    <td><%= link_to group.name, group_path(group) %></td>
    <td><%= group.leader.map {|m| m.full_name }.join(', ') %></td>
    <td><%= group.group_memberships.count %></td>
    <td><%= link_to 'Adressen', address_group_path(group) %></td>
  </tr>
<% end %>
</table>

<% if @group.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

    <ul>
    <% @group.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@group) do |f| %>
  <table class='form'>

    <tr>
      <th><%= f.label :name %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :shortcut %></th>
      <td><%= f.text_field :shortcut %></td>
    </tr>
    <tr>
      <th><%= f.label :category %></th>
      <td><%= f.collection_select :category, [OpenStruct.new(key: 'age', value: 'Alter'), OpenStruct.new(key: 'interest', value: 'Interesse')], :key, :value, include_blank: true %></td>
    </tr>
    <tr>
      <th><%= f.label :description %></th>
      <td><%= f.text_field :description %></td>
    </tr>
    <tr>
      <th><%= f.label :public %></th>
      <td><%= f.check_box :public %></td>
    </tr>
    
    <tr>
      <th>Webseite</th>
      <td>
        <%- if @group.page %>
          <%= @group.page.try(:title)  %> (<%= link_to 'bearbeiten', edit_page_path(@group.page) %>)
        <% else %>
          Wird nach dem erstellen erzeugt
        <% end %>
      </td>
    </tr>

  </table>
  
  <div class="actions">
    <%= f.submit %>
    <%= link_to 'Gruppe löschen', group_path(@group), confirm: 'Wirklich löschen?', method: :delete, class: 'btn btn-danger' unless @group.new_record? %>
  </div>
  
  <ul class='tabs'>
    <li><a href='#mitglieder'>Mitglieder</a></li>
    <li><a href='#verantwortung'>Verantwortung</a></li>
  </ul>
  
  <div class='tab-content'>
    <div id='verantwortung'>
      <ul>
        <%- @group.roles.each do |role| %>
          <li><%= t "role.#{role.name}" %></li>
          <ul>
            <%- role.members.each do |member| %>
              <li><%= member.full_name %></li>
            <% end %>
          </ul>
        <% end %>
      </ul>
      
      <div class='actions'>
        
          <select name='add_group_leader_id' class='inline'>
            <option></option>
            <%- Member.active.each do |member| %>
              <option value='<%= member.id %>'><%= member.name %> <%= member.first_name %></option>
            <% end %>
          </select>
          
          <%= f.submit 'als Gruppenleiter hinzufügen', class: 'btn btn-success', name: 'add_group_leader' %>
          
      </div>
      
    </div>
    
    <div id='mitglieder'>
      <table class='system'>
        <thead>
          <th></th>
          <th style='min-width:200px;'>Mitglied</th>
          <th>Rolle</th>
          <th width=20>Sortierung</th>
        </thead>
        <thead>
          <td></td>
          <%= fields_for :new_membership do |builder| %>
            <td><%= builder.collection_select :member_id, Member.active, :id, :full_name, include_blank: true %></td>
            <td><%= builder.text_field :role %></td>
          <% end %>
          <td><%= f.submit 'Hinzufügen', name: 'add' %></td>
          
        </thead>
        <tbody>
          <% @group.group_memberships.each do |gms| %>
            <tr>
              <td><%= check_box_tag 'selection[]', gms.id %></td>
              <td><%= gms.member.try :full_name %></td>
              <%= fields_for "group_memberships[]", gms do |b| %>
                <td><%= b.text_field :role %></td>
                <td><%= b.text_field :position %></td>
              <% end %>

          <% end %>
        </tbody>
        
        <%- unless @group.new_record? %>
          <tfoot>
            <tr>
              <td></td>
              <td><%= f.submit 'Auswahl löschen', class: 'btn btn-danger', name: 'delete', confirm: 'Ausgewählte Gruppenmitglieder löschen?' %></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit 'Auswahl verschieben in:', class: 'btn btn-success', name: 'move', confirm: 'Ausgewählte Mitglieder in neue Gruppe verschieben?' %></td>
              <td>
                <select name='move_to_group_id'>
                  <%- Group.all.each do |group| %>
                    <option value='<%= group.id %>'><%= group.name %></option>
                  <% end %>
                </select>
              </td>
              <td></td>
            </tr>
          </tfoot>
        <% end %>
        

      
      </table>
    </div>
    

  
  </div>
  

  
<% end %>


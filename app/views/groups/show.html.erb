<%= render_breadcrumbs %>

<div id='navigatable-nav'>
  <%= render_navigatable_nav(@previous, '&laquo;', lambda {|i| group_path(i) }, :name) %>
  <%= render_navigatable_nav(@next, '&raquo;', lambda {|i| group_path(i) }, :name) %>
</div>


<h1><%= @group.name %>
  <div class='subtitle'><%= @group.description %></div>
</h1>



<%= render 'pages/show', page: @group.page %>


<% content_for :actions do %>
  <%= link_to_active 'Gruppe verwalten', edit_group_path(@group) if can?(:update, @group) %>
  <%= link_to_active 'Gruppenseite bearbeiten', edit_page_path(@group.page) if can?(:update, @group.page) %>
<% end %>

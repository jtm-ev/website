<%= form_for(@email) do |f| %>
  <% if @email.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@email.errors.count, "error") %> prohibited this email from being saved:</h2>

      <ul>
      <% @email.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <table class='form'>
    <thead>
      <th>Inhalt</th>
      <th style='width:250px;'>Empf√§nger</th>
    </thead>
    <tbody>
      <tr>
        <td>
          <div class="field">
            <%= f.text_field :subject, style: 'width: 100%;' %>
          </div>
          <div class="field">
            <%= f.text_area :content, style: 'height: 300px;' %>
          </div>
        </td>
        <td>
          <div class='accordion' style='height: 300px;'>
            <div class='accordion-header'>Mitglieder</div>
            <div class='accordion-body'>
              <% Member.active.ordered.each do |member| %>
                <div><%= member.ordered_full_name %></div>
              <% end %>
            </div>
            <div class='accordion-header'>Gruppen</div>
            <div class='accordion-body'>
              <% Group.scoped.order(:name).each do |group| %>
                <div><%= group.name %></div>
              <% end %>
            </div>
          </div>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="actions">
    <%= f.submit 'E-Mail versenden' %>
  </div>
<% end %>

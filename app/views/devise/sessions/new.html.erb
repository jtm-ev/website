<h2>Anmelden</h2>

<div class='well'>
  Falls du noch keinen Account hast, kannst du dich hier <%= link_to 'registrieren', new_user_registration_path %>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <table class='form devise-form'>
    <tr>
      <th><%= f.label :username %></th>
      <td>
        <div class='input-append'>
          <%= f.text_field :username, :autofocus => true %>
          <span class='add-on'>@jtm.de</span>
        </div>
      </td>
    </tr>
    
    <tr>
      <th><%= f.label :password %></th>
      <td><%= f.password_field :password %></td>
    </tr>
    
    <% if devise_mapping.rememberable? -%>
      <tr>
        <td></td>
        <td><%= f.check_box :remember_me %> <%= f.label :remember_me %></td>
        
      </tr>
    <% end -%>
  </table>
  
  <div class='actions'><%= f.submit "Anmelden" %></div>
<% end %>



<%= render "devise/shared/links" %>

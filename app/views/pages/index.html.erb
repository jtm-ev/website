<h1>Seiten</h1>

<table class='system'>
  <thead>
    <th>Title</th>
    <th>In Navigation</th>
    <th>Public</th>
    <th></th>
    <th></th>
    <th></th>
  </thead>

  <tbody class='sortable-table'>
<% Page.tree_array.each do |entry| %>
  <% page = entry.instance %>
  <tr>
    <td>
      <% if entry.level == 0 %>
        <strong><%= entry.label %></strong>
      <% else %>
        <%= entry.label %>
      <% end %>
    </td>
    <td><%= page.show_in_navigation %></td>
    <td><%= page.public %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  </tbody>
<% end %>
</table>


<% content_for :actions do %>
  <%= navigation_link_to 'Seite anlegen', new_page_path %>
<% end %>
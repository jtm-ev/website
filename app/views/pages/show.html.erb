<% set_background @page.background %>

<%= render_breadcrumbs %>

<%= render 'navigation', page: (@page.navigation_style == 'parent' ? @page.parent : @page) %>


<%= render 'show' %>


<% content_for :actions do %>
  <% if @page.group and can?(:update, @page.group) %>
    <%= navigation_link_to 'Gruppe verwalten', edit_group_path(@page.group) %>
    <%= navigation_link_to 'Gruppenseite bearbeiten', edit_page_path(@page) %>
  <% else %>
    <%= navigation_link_to 'Seite bearbeiten', edit_page_path(@page) if can?(:update, @page) %>
  <% end %>
<% end %>

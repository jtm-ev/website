<%- title(@page.title) %>
<%- meta(

) %>
<%- set_background @page.background %>

<%= render_breadcrumbs %>

<%= render 'navigation', page: (@page.navigation_style == 'parent' ? @page.parent : @page) %>


<%= render 'show' %>


<% content_for :actions do %>
  <% if @page.group and can?(:update, @page.group) %>
    <%= link_to_active 'Gruppe verwalten', edit_group_path(@page.group),true %>
    <%= link_to_active 'Gruppenseite bearbeiten', edit_page_path(@page), true %>
  <% else %>
    <%= link_to_active 'Seite bearbeiten', edit_page_path(@page) if can?(:update, @page)%>
  <% end %>
<% end %>

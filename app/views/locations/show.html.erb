<%= render_breadcrumbs %>

<div id='navigatable-nav'>
  <%= render_navigatable_nav(@previous, '&laquo;', lambda {|i| location_path(i) }, :name) %>
  <%= render_navigatable_nav(@next, '&raquo;', lambda {|i| location_path(i) }, :name) %>
</div>

<%= image_tag "http://maps.google.com/maps/api/staticmap?size=400x250&sensor=false&zoom=16&markers=#{@location.latitude}%2C#{@location.longitude}", class: 'location-image' %>

<h1><%= @location.name %></h1>
<%= @location.joined_address %>

<div class='clearfix'></div>

<div class='ui top attached tabular menu'>
  <a href='#beschreibung' class="active item" data-tab="beschreibung">Beschreibung</a>
  <a href='#projekte' class="item" data-tab="projekte">Projekte (<%= @location.projects.count %>)</a>
</div>

<div class='tab-content'>
  <div class='ui bottom active attached tab segment' data-tab="beschreibung">
    <%= render 'pages/show', page: @location.page %>
  </div>

  <div class='ui bottom attached tab segment' data-tab="projekte">

    <div id="gallery" style="display:none;">
      <% @location.projects.latest_first.each do |project| %>
        <% if project.image %>
          <a href='<%= asset_url project_path(project)%>'>
            <img alt='<%= project.title %>'
            src='<%= asset_url project.image.file.url(:normal) %>'
            data-image='<%= asset_url project.image.file.url() %>'>
          </a>
        <% end %>
      <% end %>
    </div>

    <script type="text/javascript">

      jQuery(document).ready(function(){
        jQuery("#gallery").unitegallery({
					gallery_width:"100%",
					tile_border_color:"#7a7a7a",
					tile_outline_color:"#8B8B8B",
					tile_enable_shadow:true,
					tile_shadow_color:"#8B8B8B",
					tile_overlay_opacity:0.3,
					tile_show_link_icon:true,
					tile_image_effect_type:"sepia",
					tile_image_effect_reverse:true,
					tile_enable_textpanel:true,
					lightbox_textpanel_title_color:"e5e5e5",
					tiles_col_width:230,
					tiles_space_between_cols:20
				});

      });

    </script>
  </div>
</div>

<div id='anfahrt'>

</div>



<% content_for :actions do %>
  <%= link_to_active 'Spielort bearbeiten', edit_location_path(@location), true %>
  <%= link_to_active 'Beschreibung bearbeiten', edit_page_path(@location.page), true %>
<% end %>

<%= form_for(@guestbook) do |f| %>
  <% if @guestbook.errors.any? %>
    <div id="error_explanation">
      <h2>Fehler:</h2>

      <ul>
      <% @guestbook.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <table class='form'>
    <tr>
      <th><%= f.label :name %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :content %></th>
      <td><%= f.text_area :content, class: 'size-middle' %></td>
    </tr>
    
    <tr>
      <th><%= f.label :project %></th>
      <td><%= f.collection_select :project_id, Project.latest_first.limit(5), :id, :title, include_blank: true %></td>
    </tr>
    
  </table>
  
  <div class="actions">
    <%= f.submit %>
    <%= link_to 'oder zurück zum Gästebuch', guestbooks_path %>
  </div>
  
<% end %>

<!DOCTYPE html>
<html>
<head>
  <title>Website</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class='internal'>

  <div class='navbar navbar-fixed-top navbar-inverse'>
    <div class='navbar-inner'>
      <ul class='nav'>
        <%= navigation_link_to 'Seiten', pages_path %>
        <%= navigation_link_to 'Gruppen', groups_path %>
        <%= navigation_link_to 'Mitglieder', '#' %>
        <%# unless yield(:actions).blank? %>
          <li class='dropdown'>
            <a href='#' class='dropdown-toggle' data-toggle='dropdown'>Actions</a>
            <ul class='dropdown-menu'>
              <%= yield(:actions) %>
              <li class='divider'></li>
              <li>
                <%= link_to 'E-Mail schreiben', '#' %>
              </li>
            </ul>
          </li>
          
        <%# end %>
      </ul>
      <ul class='nav pull-right'>
        
        <li><a href='#profile'>Profil</a></li>
        <li><%= link_to 'Logout', '#logout' %></li>
      </ul>
    </div>
  </div>


  <section id='sidebar'>
    <a href='/'><img id='logo' src='/images/logo2.png'></a>
    <nav>
      <ul>
        <%= navigation_link_to 'Projekte', projects_path %>
        <%= navigation_link_to 'Gruppen', groups_path %>
        
        <% Page.roots.where(show_in_navigation: true).each do |page| %>
          <%= navigation_link_to page.title, page_path(page) %>
        <% end %>
        
      </ul>
    </nav>
  </section>
  
  <section id='content' style='<%= yield(:background).blank? ? "" : "background-image: url(#{yield(:background)})" %>'>
    <div class='container'>
      <%= yield %>
    </div>
  </section>

</body>
</html>

<!DOCTYPE html>
<html class='no-js'>
<head>
  <%= render 'layouts/meta' %>
  <title><%= yield(:title).blank? ? "JTM - Jugendtheater Martinszell e.V." : yield(:title) %></title>
  <link rel="icon" type="image/png" href="/favicon.png" />

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "print", :media => "print" %>

  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-20299192-1']);
    _gaq.push(['_setDomainName', 'jtm.de']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
</head>

<body class='<%= current_user ? "internal" : "" %>'>
  <% if current_user %>


    <% content_for :default_actions do %>
      <%= navigation_link_to 'Termin', new_event_path if can?(:create, Event) %>
      <%= navigation_link_to 'Projekt', new_project_path if can?(:create, Project) %>
      <%= navigation_link_to 'Seite', new_page_path if can?(:create, Page) %>
      <%= navigation_link_to 'Mitglied', new_member_path if can?(:create, Member) %>
      <%= navigation_link_to 'Gruppe', new_group_path if can?(:create, Group) %>
    <% end %>

    <% content_for :editor_links do %>
      <%= navigation_link_to 'User', users_path, true if can?(:manage, User) %>
      <%= navigation_link_to 'Mitglieder', members_path, true if can?(:manage, Member) %>
      <%# navigation_link_to 'Gruppen', groups_path, true if can?(:manage, Group)%>
      <%# navigation_link_to 'Kalender', '#' %>
      <%# navigation_link_to 'E-Mail', '#' %>
      <%= navigation_link_to 'Seiten', pages_path, true if can?(:manage, Page) %>
      <%= navigation_link_to 'Termine', events_path, true if can?(:manage, Event) %>
    <% end %>

    <div class='navbar navbar-fixed-top navbar-inverse'>
      <div class='navbar-inner'>
        <ul class='nav'>
          <% link_to current_user.member.full_name, '/profile', class: 'brand' %>

          <%= navigation_link_to 'E-Mail', email_path, true %>
          <%= navigation_link_to 'Adressen', address_members_path, true %>
          <%= navigation_link_to 'Gruppen', groups_path, true %>

          <%# Links für Editoren %>
          <% unless yield(:editor_links).blank? %>
            <li class="divider-vertical"></li>
            <%= yield(:editor_links) %>
          <% end %>

          <%# Actions Dropdown %>
          <% unless yield(:actions).blank? %>
            <li class="divider-vertical"></li>
            <li class='dropdown'>
              <a href='#' class='dropdown-toggle' data-toggle='dropdown'>Actions</a>
              <ul class='dropdown-menu'>
                <%= yield(:actions) %>
              </ul>
            </li>
          <% end %>

          <%# Anlegen Dropdown %>
          <% unless yield(:default_actions).blank? %>
            <li class="divider-vertical"></li>
            <li class='dropdown'>
              <a href='#' class='dropdown-toggle' data-toggle='dropdown'>Anlegen</a>
              <ul class='dropdown-menu'>
                <%= yield(:default_actions) %>
              </ul>
            </li>
          <% end %>

        </ul>
        <ul class='nav pull-right'>
          <%= navigation_link_to 'Dashboard', '/dashboard' %>
          <%= navigation_link_to 'Profil', '/profile' %>
          <li><%= link_to 'Logout', '/logout' %></li>
          <%- if current_user.member.has_image? %>
            <li class='nav-profile-image'>
              <img src='<%= current_user.member.file.url(:square) %>'>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<div class="ui grid">
      <div id='background' style='<%= yield(:background).blank? ? "" : "background-image: url(#{yield(:background)})" %>'></div>
      <div class="computer only row">
           <div class="ui inverted fixed menu navbar page grid">
              <a href='/'><img id='logo' src='/images/logo2.png'></a>
              <a href="/" class="brand item">Jugentheater Martinszell</a>
              <a href="/projekte" class="item">Projekte</a>
              <a href="" class="item">Gästebuch</a>
              <div class="right menu">
                  <% unless current_user %>
                    <a href='/login' class="item">Intern</a>
                  <% end %>
              </div>
          </div>
      </div>
      <div class="mobile tablet only row">
          <div class="ui fixed inverted navbar menu">
            <a href='/' class="logo"><img id='logo' src='/images/logo2.png'></a>
            <a href="/" class="brand item mobile">Jugentheater Martinszell</a>
          </div>
          <div class="ui vertical navbar menu transition hidden">
            <a href="/projekte" class="item">Projekte</a>
            <a href="" class="item">Gästebuch</a>
              <% unless current_user %>
                <a href='/login' class="item">Intern</a>
              <% end %>
          </div>
      </div>
  </div>

  <div id='content'>
    <div class='containers'>
      <div id='flashes'>
      <%- flash.each do |key, value| %>
        <div class='alert alert-<%= key %>'>
          <%= value %>
        </div>
      <% end %>
      </div>
      <%= yield %>
    </div>
  </div>
</body>
</html>

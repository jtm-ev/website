<h1>Projekte (<%= @projects.count %>)</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Untertitel</th>
    <th>Images</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.id %></td>
    <td><%= project.title %></td>
    <td><%= project.subtitle %></td>
    <td><%= project.project_files.count %></td>
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<% content_for :actions do %>
  <%= navigation_link_to 'Projekt anlegen', new_project_path %>
<% end %>
<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class='form'>
    <tr>
      <th><%= f.label :title %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :subtitle %></th>
      <td><%= f.text_field :subtitle %></td>
    </tr>
    <tr>
      <th><%= f.label :videos %></th>
      <td><%= f.text_area :videos %></td>
    </tr>
    <tr>
      <th><%= f.label :tags %></th>
      <td><%= f.text_field :tag_list, class: 'tags' %></td>
    </tr>
  </table>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
  <ul class='tabs'>
    <li><a href='#inhalt'>Inhalt</a></li>
    <li><a href='#teams'>Teams</a></li>
    <li><a href='#bilder'>Bilder</a></li>
    <li><a href='#presse'>Presse</a></li>
  </ul>
  
  <div class='tab-content'>
    <div id='inhalt'>
      <%= render 'wysiwyg', {form: f, field: :description} %>
    </div>
    
    <% unless @project.new_record? %>
      <div id='bilder'>
        <%= render 'image_form', {collection: @project.images, upload_url: specific_project_project_files_url(@project, {kind: 'image'})} %>
      </div>
      
      <div id='presse'>
        <%= render 'image_form', {collection: @project.press, upload_url: specific_project_project_files_url(@project, {kind: 'press'})} %>
      </div>
    <% end %>
    
    <div id='darsteller'>
      
    </div>
    
    <div id='teams'>
      <ul>
        <% @project.teams.each do |team| %>
          <li><%= link_to team.name, edit_project_team_path(@project, team) %></li>
        <% end %>
      </ul>
    </div>
  </div>


<% end %>




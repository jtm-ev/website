<h1>Mitglieder (<%= @members.count %>)</h1>

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>
      Phone<br />
      Mobile<br />
      Fax
    </th>
    <th>Email<br/>Email extern</th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <!--input class='fileupload' type='file' name='files' data-reload=true data-dropzone='#member-<%= member.id %>' data-method='PUT' data-url='<%= member_path(member) %>'-->

  <tr id='member-<%= member.id %>'>
    <td>
      <% if member.has_image? %>
        <img src='<%= member.file.url(:square) %>'>
      <% end %>
    </td>
    <td><%= link_to [member.name, member.first_name].join(' '), member_path(member) %></td>
    <td>
      <%= member.phone %>  <br/>
      <%= member.mobile %>  <br/>
      <%= member.fax %>
    </td>
    <td><%= member.email %><br/><%= member.email_extern %></td>
    <td>
      <%= link_to 'Show', member %>
      <%= link_to 'Edit', edit_member_path(member) %>
      <%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>


<div class='actions'>
  <%= link_to 'Mitglied anlegen', new_member_path %>
</div>
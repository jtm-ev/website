      <div id="calendarentry_desc" class="field">
        <%= f.text_area :description, :placeholder => "Beschreibung" %>
      </div>
    </div>
    <div class="field">
      <%= f.label "Startzeit" %><br>
      <%= f.datetime_select :start_time %>
    </div>
    <div id="calendarentry_end" class="field">
      <%= f.label "Endzeit" %><br>
      <%= f.datetime_select :end_time %>
    </div>
    <div id="calendarentry_create" class="ui">
      <%= f.submit "Kalendereintrag erstellen", class: "ui button primary" %>
    </div>
  </div>
<% end %>

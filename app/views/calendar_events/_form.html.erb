      <ul>
      <% @calendar_event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="ui piled segment" style="z-index: 3; margin-bottom: 10px; margin-top: 10px;">
    <h1>Neuer Kalendereintrag</h1>
